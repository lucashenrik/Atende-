package com.lucas.demo.infra;

import org.springframework.boot.web.servlet.FilterRegistrationBean;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.web.servlet.config.annotation.WebMvcConfigurer;

@Configuration
public class WebConfig implements WebMvcConfigurer {

    @Bean
    public FilterRegistrationBean<ParameterAdjustingFilter> loggingFilter(){
        FilterRegistrationBean<ParameterAdjustingFilter> registrationBean 
          = new FilterRegistrationBean<>();
        
        registrationBean.setFilter(new ParameterAdjustingFilter());
        registrationBean.addUrlPatterns("/pedido/*"); // Ajuste conforme necess√°rio

        return registrationBean;
    }
}
