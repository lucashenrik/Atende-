package com.lucas.demo.service;

public class Main {
    public static void main(String[] args) {
        String xml = "<pedido><id>123</id><quantidade>2</quantidade><descricao>Produto de teste</descricao></pedido>";
        
        PedidoService pedidoService = new PedidoService();
        try {
            Pedido pedido = pedidoService.xmlParaPedido(xml);
            
            // Exibir os dados do objeto Pedido
            System.out.println("ID: " + pedido.getId());
            System.out.println("Quantidade: " + pedido.getQuantidade());
            System.out.println("Descrição: " + pedido.getDescricao());
            
        } catch (JAXBException e) {
            e.printStackTrace();
        }
    }
}